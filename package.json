{
  "name": "squid-evm-template",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "build": "rm -rf lib && tsc",
    "evm-typegen": "npx squid-evm-typegen src/abi --etherscan-api https://api.arbiscan.io/api --etherscan-api-key $(cat ./.arbiscan_api_key)",
    "reset": "npx ts-node ./scripts/resetDb.ts; rm -rf db/migrations; yarn codegen && yarn build; yarn migration:generate; yarn migration:apply",
    "migration:generate": "npx squid-typeorm-migration generate",
    "migration:apply": "npx squid-typeorm-migration apply",
    "codegen": "npx squid-typeorm-codegen",
    "test": "jest",
    "test:ci": "jest --ci",
    "tscheck": "tsc --noEmit",
    "lint": "eslint --fix --max-warnings=0 src",
    "dev": "sqd process",
    "serve": "sqd build && sqd serve",
    "deploy:arbitrum": "sqd deploy --hard-reset --org gmx ./ --manifest squid-arbitrum.yaml --slot $(git rev-parse --short HEAD | cut -c1-6)",
    "deploy:avalanche": "sqd deploy --hard-reset --org gmx ./ --manifest squid-avalanche.yaml --slot $(git rev-parse --short HEAD | cut -c1-6)",
    "deploy:botanix": "sqd deploy --hard-reset --org gmx ./ --manifest squid-botanix.yaml --slot $(git rev-parse --short HEAD | cut -c1-6)",
    "deploy:fuji": "sqd deploy --hard-reset --org gmx ./ --manifest squid-fuji.yaml --slot $(git rev-parse --short HEAD | cut -c1-6)",
    "prepare": "husky"
  },
  "dependencies": {
    "@subsquid/evm-processor": "1.27.1",
    "@subsquid/graphql-server": "^4.10.0",
    "@subsquid/typeorm-migration": "^1.3.0",
    "@subsquid/typeorm-store": "^1.2.6",
    "class-validator": "^0.14.1",
    "dotenv": "^16.4.4",
    "ethers": "^6.11.1",
    "lodash": "^4.17.21",
    "type-graphql": "^1.1.1",
    "typeorm": "^0.3.20",
    "viem": "^2.7.16"
  },
  "devDependencies": {
    "@subsquid/evm-typegen": "^3.3.0",
    "@subsquid/typeorm-codegen": "^1.3.3",
    "@types/jest": "^29.5.14",
    "@types/lodash": "^4.17.16",
    "@types/node": "^20.11.17",
    "@types/pg": "^8.11.0",
    "@typescript-eslint/eslint-plugin": "6.5.0",
    "@typescript-eslint/parser": "6.5.0",
    "eslint": "^8.41.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-config-recommended": "4.1.0",
    "eslint-plugin-es-x": "8.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "pg": "^8.11.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.3.2",
    "ts-node": "^10.9.2",
    "typeorm-naming-strategies": "^4.1.0",
    "typescript": "~5.3.3"
  },
  "lint-staged": {
    "src/**/*.{js,ts}": [
      "eslint --fix --max-warnings=0 src",
      "prettier --write"
    ]
  },
  "packageManager": "yarn@3.8.7",
  "engines": {
    "node": ">=20.11.1"
  }
}
